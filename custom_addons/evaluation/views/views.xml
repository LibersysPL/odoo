<odoo>
	<data>
		<record id="action_evaluation_form"
			model="ir.actions.act_window">
			<field name="name">Evaluation</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">libersys.evaluation</field>
			<field name="view_type">form</field>
			<field name="view_mode">kanban,tree,form</field>
		</record>

		<menuitem id="menu_evaluation" name="Evaluation"
			sequence="10" />

		<menuitem action="action_evaluation_form"
			id="menu_evaluation_recs" parent="menu_evaluation" sequence="10" />

		<!-- Kanban View: Start -->
		<record id="evaluation_view_kanban" model="ir.ui.view">
			<field name="name">Evaluation</field>
			<field name="model">libersys.evaluation</field>
			<field name="type">kanban</field>
			<field name="arch" type="xml">
				<kanban default_group_by="state"
					class="o_kanban_small_column o_kanban_project_tasks"
					group_create="false"
					group_delete="false"
					group_edit="false"
					quick_create="false">
					<field name="subject" />
					<field name="partner" />
					<field name="state" />
					<templates>
						<t t-name="kanban-box">
							<div
								t-attf-class="oe_kanban_color_#{kanban_getcolor('white')} oe_kanban_card oe_kanban_global_click">
								<div class="oe_kanban_content">
									<div class="o_kanban_record_top">
										<div class="o_kanban_record_headings">
											<strong class="o_kanban_record_title">
												<h1><field name="subject" /></h1>
											</strong>
											<br />
										</div>
										<div class="o_dropdown_kanban dropdown"
											groups="base.group_user">
											<a class="dropdown-toggle btn" data-toggle="dropdown"
												href="#">
												<span class="fa fa-ellipsis-v" aria-hidden="true" />
											</a>
											<ul class="dropdown-menu" role="menu"
												aria-labelledby="dLabel">
												<li t-if="widget.editable">
													<a type="edit">Edit</a>
												</li>
												<li t-if="widget.deletable">
													<a type="delete">Delete</a>
												</li>
											</ul>
										</div>
									</div>
									<div class="o_kanban_record_body">
									</div>
									<div class="o_kanban_record_bottom">
										<div class="oe_kanban_bottom_left">
										</div>
										<div class="oe_kanban_bottom_right">
										</div>
									</div>
								</div>
								<div class="oe_clear"></div>
							</div>
						</t>
					</templates>
				</kanban>
			</field>
		</record>
		<!-- Kanban View: End -->

		<!-- List View: Start -->
		<record id="evaluation_view_tree" model="ir.ui.view">
			<field name="name">Evaluation</field>
			<field name="model">libersys.evaluation</field>
			<field name="arch" type="xml">
				<tree>
					<field name="subject" />
				</tree>
			</field>
		</record>
		<!-- List View: End -->

		<!-- Form View: Start -->
		<record id="evaluation_view_form" model="ir.ui.view">
			<field name="name">Evaluation</field>
			<field name="model">libersys.evaluation</field>
			<field name="arch" type="xml">
				<form string="Evaluation Record">
					<header>
						<button string="Assigned" type="object"
							name="assigned_progressbar"
							attrs="{'invisible': [('state', '=', 2)]}" />
						<button string="Pending Input" type="object"
							name="pending_progressbar"
							attrs="{'invisible': [('state', '=', 3)]}" />
						<button string="Closed - Unsuccessful" type="object"
							name="uclosed_progressbar"
							attrs="{'invisible': [('state', '=', 4)]}" />
						<button string="Closed - Successful" type="object"
							name="sclosed_progressbar"
							attrs="{'invisible': [('state', '=', 5)]}" />
						<field name="state" widget="statusbar"
							statusbar_visible="1, 2, 3, 4, 5" />
					</header>
					<sheet>
						<group name="group_details" string="Details">
							<group name="group_left">
								<field name="subject" />
								<field name="assigned_to" />
								<field name="sales_person" />
								<field name="priority" />
								<field name="deadline" />
							</group>
							<group name="group_right">
								<field name="partner" />
								<field name="contact_person" widget="many2many_tags" />
							</group>
						</group>
						<group name="group_bottom">
							<notebook>
								<page string="Projects">
									<field name="project"/>
								</page>
								<page string="Internal Notes">
                                	<field name="internal_notes"/>
                            	</page>
                            	<page string="Documents">
									<field name="documents" widget="many2many_binary" />
								</page>
							</notebook>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- Form View: End -->
	</data>
</odoo>